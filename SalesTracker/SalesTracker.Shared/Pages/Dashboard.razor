@page "/"
@inject DashboardService DashboardService
@inject OrderService OrderService
@inject ItemService ItemService
@inject DemoDataService DemoDataService
@inject NavigationManager Navigation
@inject IJSRuntime JS

<PageTitle>Dashboard</PageTitle>

<div class="dashboard-container">
<div class="dashboard-header d-flex justify-content-between">
    <h1>Dashboard</h1>   
    <div class="search-section">
        <div class="search-box d-flex gap-3" style="max-width: 800px;">
            <InputText class="search-input form-control" placeholder="Search..." @bind-Value="SearchTerm" @onchange="HandleSearch" />
            <button class="btn btn-primary search-btn" @onclick="HandleSearch" title="Search">
               <SearchIcon />
            </button>
        </div>
    </div>
</div>

    @if (IsLoading)
    {
        <div class="loading-spinner">
            <p>Loading dashboard data...</p>
        </div>
    }
    else if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @ErrorMessage
        </div>
    }
    else
    {
        <!-- Top Row: Sales Chart and New Sale Button + Metrics -->
        <div class="row mb-3">
            <div class="col-md-6">
                <div class="card shadow-lg"><div class="card-body"><canvas id="salesChart"></canvas></div></div>
            </div>

            <div class="col-md-6">
                <a href="/sales/setup" class="btn btn-primary btn-lg new-sale-btn w-100">
                    <PlusIcon />
                    New Sale
                </a>

                <div class="metrics-row row mt-3">
                    <div class="col-6">
                        <div class="metric-card card me-1 rounded-3 shadow-lg">
                            <div class="card-body py-4 my-3 d-flex">
                                <div class="m-auto d-inline-block">
                                    <div class="metric-header mb-1">
                                        <span class="metric-change @(SalesPercentageChange >= 0 ? "positive text-success" : "negative text-danger")">
                                            @if (SalesPercentageChange >= 0)
                                            {
                                                <ArrowUpIcon />
                                            }
                                            else
                                            {
                                                <ArrowDownIcon />
                                            }
                                            @Math.Abs(SalesPercentageChange).ToString("F1")%
                                        </span>
                                    </div>
                                    <div class="metric-value fs-2 text-center fw-bold">@CurrentMonthSales.ToString("C0")</div>
                                    <div class="metric-label fs-4 text-center">Sales</div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class=" col-6">
                        <div class="metric-card card ms-1  rounded-3 shadow-lg">
                                 <div class="card-body py-4 my-3 d-flex">
                                 <div class="m-auto d-inline-block">
                                    <div class="metric-header mb-1">
                                        <span class="metric-change @(ProfitPercentageChange >= 0 ? "positive text-success" : "negative text-danger")">
                                            @if (ProfitPercentageChange >= 0)
                                            {
                                                <ArrowUpIcon />
                                            }
                                            else
                                            {
                                                <ArrowDownIcon />
                                            }
                                            @Math.Abs(ProfitPercentageChange).ToString("F1")%
                                        </span>
                                    </div>
                                    <div class="metric-value fs-2 text-center fw-bold">@CurrentMonthProfit.ToString("C0")</div>
                                    <div class="metric-label fs-4 text-center">Profit</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Second Row: Stats Cards and Backorders -->
        <div class="row">
            <div class="col-lg-6">
                <div class="stats-container d-flex gap-3">
                    <div class="card shadow-lg flex-grow-1">
                        <div class="card-body">
                            <div class="d-flex flex-column gap-3">
                                <div>
                                    <div class="bg-primary text-white rounded p-3 d-inline-block">
                                        <div class="stat-icon pending text-center">
                                            <TruckIcon Width="24" Height="24" />
                                        </div>
                                    </div>
                                </div>
                                <div class="stat-content">
                                    <div class="stat-title fs-5">Pending Deliveries</div>
                                    <div class="stat-number fs-1">@PendingDeliveries</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow-lg flex-grow-1">
                        <div class="card-body">
                            <div class="d-flex flex-column gap-3">
                                <div>
                                    <div class="bg-primary text-white rounded p-3 d-inline-block">
                                        <div class="stat-icon pending text-center">
                                            <BoxIcon Width="24" Height="24" />
                                        </div>
                                    </div>
                                </div>
                                <div class="stat-content">
                                    <div class="stat-title fs-5"># of Items</div>
                                    <div class="stat-number fs-1">@TotalItems</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow-lg flex-grow-1">
                        <div class="card-body">
                            <div class="d-flex flex-column gap-3">
                                <div>
                                    <div class="bg-primary text-white rounded p-3 d-inline-block">
                                        <div class="stat-icon pending text-center">
                                            <CartIcon Width="24" Height="24" />
                                        </div>
                                    </div>
                                </div>
                                <div class="stat-content">
                                    <div class="stat-title fs-5">Orders This Month</div>
                                    <div class="stat-number fs-1">@OrdersThisMonth</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div>
                    <div class="d-flex justify-content-between">
                            <h5>Back-orders</h5>
                            <span class="qty-label">Qty Needed</span>
                        </div>
                    <div>
                        @if (BackorderedItems.Count == 0)
                        {
                            <p class="no-data">No back-orders at this time.</p>
                        }
                        else
                        {
                            <div class="backorder-list">
                                @foreach (var (item, qtyNeeded) in BackorderedItems)
                                {
                                    <div class="backorder-item d-flex gap-3 align-items-center">
                                        <div class="item-image me-1">
                                            <ItemImageDisplay Image="item.Images?.FirstOrDefault()" AltText="item.Name" />
                                        </div>
                                        <div class="item-details">
                                            <span class="item-name">@item.Name</span>
                                        </div>
                                        <div class="flex-grow-1"></div>
                                        <div class="item-qty">
                                            <span class="badge bg-body-tertiary text-body p-2">@qtyNeeded</span>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>

        <div class="mt-5">
            
        <button class="btn btn-secondary" @onclick="CreateDemoData" title="Create Demo Data">
            Create Demo Data
        </button>
</div>
    }
</div>

@code {
    private bool IsLoading = true;
    private string ErrorMessage = string.Empty;
    private string SearchTerm = string.Empty;
    private bool renderedChart = false;

    private decimal CurrentMonthSales = 0m;
    private decimal CurrentMonthProfit = 0m;
    private decimal SalesPercentageChange = 0m;
    private decimal ProfitPercentageChange = 0m;
    private int PendingDeliveries = 0;
    private int TotalItems = 0;
    private int OrdersThisMonth = 0;
    private List<(Item Item, int QtyNeeded)> BackorderedItems = new();

    private Dictionary<string, decimal> DailySalesData = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            // Load all dashboard data in parallel
            await Task.WhenAll(
                LoadSalesMetrics(),
                LoadProfitMetrics(),
                LoadOperationalMetrics(),
                LoadBackorderedItems(),
                LoadDailySalesData()
            );

            IsLoading = false;
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Failed to load dashboard: {ex.Message}";
            IsLoading = false;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (!renderedChart && !IsLoading && DailySalesData.Count > 0)
        {
            await RenderSalesChart();
        }
    }

    private async Task LoadSalesMetrics()
    {
        CurrentMonthSales = await DashboardService.GetCurrentMonthSalesAsync();
        SalesPercentageChange = await DashboardService.GetMonthlySalesPercentageChangeAsync();
    }

    private async Task LoadProfitMetrics()
    {
        CurrentMonthProfit = await DashboardService.GetCurrentMonthNetProfitAsync();
        ProfitPercentageChange = await DashboardService.GetMonthlyProfitPercentageChangeAsync();
    }

    private async Task LoadOperationalMetrics()
    {
        PendingDeliveries = await DashboardService.GetPendingDeliveriesCountAsync();
        OrdersThisMonth = await DashboardService.GetOrdersCountForCurrentMonthAsync();

        var items = await ItemService.GetAllItemsAsync();
        TotalItems = items.Count;
    }

    private async Task LoadBackorderedItems()
    {
        BackorderedItems = await DashboardService.GetBackorderedItemsAsync();
    }

    private async Task LoadDailySalesData()
    {
        DailySalesData = await DashboardService.GetDailySalesForCurrentMonthAsync();
    }

    private void HandleSearch()
    {
        // Search functionality can be implemented to filter orders or items
        // For now, navigation to sales or items page can be added
    }

    private async Task CreateDemoData()
    {
        try
        {
            IsLoading = true;
            ErrorMessage = string.Empty;

            await DemoDataService.CreateDemoDataAsync();

            // Reload the dashboard data
            await Task.WhenAll(
                LoadSalesMetrics(),
                LoadProfitMetrics(),
                LoadOperationalMetrics(),
                LoadBackorderedItems(),
                LoadDailySalesData()
            );

            IsLoading = false;
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Failed to create demo data: {ex.Message}";
            IsLoading = false;
        }
    }

    private async Task RenderSalesChart()
    {
        if (DailySalesData.Count == 0)
            return;
        renderedChart = true;
        var dates = DailySalesData.Keys.ToList();
        var sales = DailySalesData.Values.ToList();

        // Format dates for display (e.g., "1", "2", "3"... for day of month)
        var labels = dates.Select(d => DateTime.Parse(d).Day.ToString()).ToList();

        try
        {
            // This would require Chart.js library to be imported
            // For now, we're setting up the data structure
            // You'll need to add Chart.js to your HTML head
            await JS.InvokeVoidAsync("renderSalesChart", "salesChart", labels, sales.Select(s => (double)s).ToList());
        }
        catch
        {
            // Chart.js not available or error rendering
        }
    }
}
