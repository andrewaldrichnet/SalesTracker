@page "/sales/view"
@inject OrderService OrderService
@inject ItemService ItemService
@inject NavigationManager Navigation

<PageTitle>Sales</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Sales</h1>
        <a href="/sales/setup" class="btn btn-primary">New Sale</a>
    </div>
    
    @if (IsLoading)
    {
        <p>Loading sales...</p>
    }
    else if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @ErrorMessage
        </div>
    }
    else if (Orders.Count == 0)
    {
        <p>No sales found. <a href="/sales/setup">Create one now.</a></p>
    }
    else
    {
        <div class="mb-3">
            <InputText class="form-control" placeholder="Search by customer name..." @bind-Value="SearchTerm" @onchange="HandleSearch" />
        </div>
        
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Order ID</th>
                    <th>Customer</th>
                    <th>Item</th>
                    <th>Qty</th>
                    <th>Price</th>
                    <th>Total</th>
                    <th>Sale Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Orders)
                {
                    var itemName = ItemNames.ContainsKey(order.ItemID) ? ItemNames[order.ItemID] : "Unknown";
                    <tr>
                        <td>@order.OrderID</td>
                        <td>@order.CustomerName</td>
                        <td>@itemName</td>
                        <td>@order.Qty</td>
                        <td>${order.Price:F2}</td>
                        <td>${(order.Price * order.Qty):F2}</td>
                        <td>@order.SellDate.ToString("yyyy-MM-dd")</td>
                        <td>
                            <div class="d-flex gap-2 flex-wrap">
                                @if (order.HasReceivedPayment)
                                {
                                    <span class="badge bg-success">Paid</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning">Unpaid</span>
                                }
                                
                                @if (order.HasDelivered)
                                {
                                    <span class="badge bg-info">Delivered</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Pending</span>
                                }
                            </div>
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm" role="group">
                                <a href="/sales/setup/@order.OrderID" class="btn btn-info">Edit</a>
                                <button class="btn btn-danger" @onclick="() => HandleDelete(order.OrderID)">Delete</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<ConfirmationDialog @ref="ConfirmDialog" Title="Delete Order" Message="Are you sure you want to delete this order? This action cannot be undone." ConfirmText="Delete" CancelText="Cancel" />

@code {
    private List<Order> Orders = new();
    private List<Order> AllOrders = new();
    private Dictionary<int, string> ItemNames = new();
    private bool IsLoading = true;
    private string ErrorMessage = string.Empty;
    private string SearchTerm = string.Empty;
    private ConfirmationDialog? ConfirmDialog;

    protected override async Task OnInitializedAsync()
    {
        await LoadOrders();
    }

    private async Task LoadOrders()
    {
        try
        {
            IsLoading = true;
            ErrorMessage = string.Empty;
            AllOrders = await OrderService.GetAllOrdersAsync();
            Orders = AllOrders.OrderByDescending(o => o.SellDate).ToList();
            
            // Load item names
            var items = await ItemService.GetAllItemsAsync();
            ItemNames = items.ToDictionary(i => i.ItemID, i => i.Name);
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error loading orders: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task HandleSearch()
    {
        if (string.IsNullOrWhiteSpace(SearchTerm))
        {
            Orders = AllOrders.OrderByDescending(o => o.SellDate).ToList();
        }
        else
        {
            Orders = await OrderService.SearchByCustomerAsync(SearchTerm);
            Orders = Orders.OrderByDescending(o => o.SellDate).ToList();
        }
    }

    private async Task HandleDelete(int orderId)
    {
        if (ConfirmDialog == null || !await ConfirmDialog.ShowAsync())
            return;

        try
        {
            await OrderService.DeleteOrderAsync(orderId);
            await LoadOrders();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error deleting order: {ex.Message}";
        }
    }
}

