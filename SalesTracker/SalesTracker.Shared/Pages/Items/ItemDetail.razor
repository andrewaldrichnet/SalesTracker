@page "/items/detail/{ItemId:int}"
@using SalesTracker.Shared.Components
@using SalesTracker.Shared.Models
@inject ItemService ItemService
@inject OrderService OrderService
@inject IImageStorageService ImageStorageService
@inject NavigationManager Navigation

<PageTitle>Item Details</PageTitle>


<div class="main-content">
    <div class="row">
        <div class="col-lg-8 col-xl-10">
            <div class="d-flex mb-3 align-items-center">
                <ChevronLeftIcon CssClass="me-1" Width="24" Height="24" />
                <a href="/items/view" class="text-decoration-none fs-5">Items</a>
            </div>

            <div>
                @if (IsLoading)
                {
                    <p>Loading item details...</p>
                }
                else if (Item == null)
                {
                    <div class="alert alert-warning" role="alert">
                        Item not found. <a href="/items/view">Back to items</a>
                    </div>
                }
                else
                {
                    <ItemDetailOverview Item="Item" SalePrice="Item.SalePrice" />
                }
            </div>

        </div>
        <div class="col-lg-4 col-xl-2">
            <div class="d-flex flex-column gap-3 mt-3 mt-lg-0">
                <div><a href="/items/setup/@Item?.ItemID" class="btn btn-secondary w-100">Edit</a></div>
                <div><button class="btn btn-secondary w-100" @onclick="HandleDelete">Delete</button></div>
            </div>
        </div>
    </div>
    @if (!IsLoading && Item != null)
    {
         @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="alert alert-danger alert-dismissible fade show mt-3" role="alert">
                    @ErrorMessage
                    <button type="button" class="btn-close" @onclick="() => ErrorMessage = string.Empty"></button>
                </div>
            }
            @if (!string.IsNullOrEmpty(StatusMessage))
            {
            <div class="alert alert-primary alert-dismissible fade show mt-3" role="alert">
                    @StatusMessage
                    <button type="button" class="btn-close" @onclick="() => StatusMessage = string.Empty"></button>
                </div>
            }

        <div class="row mt-3">
            <div class="col-lg-4 col-xl-2 order-lg-1 my-3 my-lg-0">
                <div class="d-flex flex-lg-column gap-3">
                    <div class="py-4 bg-secondary-subtle rounded text-center inventory-card">
                        <div class="fs-4">Available</div>
                        <div class="fs-1 fw-bold">@(Item.CurrentInventoryQty - Item.AllocatedInventoryQty)</div>
                    </div>
                    <div class="py-4 bg-secondary-subtle rounded text-center inventory-card">
                        <div class="fs-4">Allocated</div>
                        <div class="fs-1 fw-bold">@Item.AllocatedInventoryQty</div>
                    </div>
                    <div class="py-4 bg-secondary-subtle rounded text-center inventory-card">
                        <div class="fs-4">Inventory</div>
                        <div class="fs-1 fw-bold">@Item.CurrentInventoryQty</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-xl-10">
                <div class="rounded shadow-sm bg-secondary-subtle p-4">
                    <!--Inventory Adjustment without reason-->
                    <h5 class="mb-2">Inventory Adjustment</h5>
                    <div class="d-flex gap-2">
                        <!-- Stepper style input with minus and plus button with a input in the middle -->
                        <div class="input-group input-group-lg" style="max-width: 200px;">
                            <button class="btn btn-outline-secondary" type="button" @onclick="() => AdjustmentAmount--">-</button>
                            <input type="number" class="form-control text-center" @bind="AdjustmentAmount" />
                            <button class="btn btn-outline-secondary" type="button" @onclick="() => AdjustmentAmount++">+</button>
                        </div>
                        <button class="btn btn-primary btn-lg fs-6" @onclick="ApplyInventoryAdjustment">Apply Adjustment</button>
                    </div>
                </div>

                <div class="row mt-3">
                    <div class="col-lg-8">
                        <h5>Orders</h5>
                        @if (IsLoadingOrders)
                        {
                        <p>Loading orders...</p>
                        }
                        else if (RelatedOrders.Count == 0)
                        {
                        <p class="text-muted">No orders for this item yet.</p>
                        }
                        else
                        {
                        <div class="orders-list">
                            @foreach (var order in RelatedOrders)
                            {
                                    <div class="order-card bg-secondary-subtle rounded shadow-sm mb-3 px-4 py-3" @onclick="() => NavigateToOrderDetail(order.OrderID)" style="cursor: pointer;">
                                <div class="d-flex align-items-center mb-1">
                                    <div class="fw-bold">@order.CustomerName</div>
                                    <div class="order-status d-flex gap-1 ms-1">
                                        @if (order.HasDelivered)
                                        {
                                        <span class="badge bg-primary">Delivered</span>
                                        }
                                        else
                                        {
                                        <span class="badge bg-warning">Pending</span>
                                        }
                                        @if (order.HasReceivedPayment)
                                        {
                                        <span class="badge bg-primary">Paid</span>
                                        }
                                        else
                                        {
                                        <span class="badge bg-danger">Unpaid</span>
                                        }
                                    </div>
                                </div>
                                <div class="d-flex gap-3">
                                    <div>@order.SellDate.ToString("MMM dd, yyyy")</div>
                                    <div>Qty: @order.Qty</div>
                                    <div>@order.Price.ToString("C2")</div>
                                </div>
                            </div>
                            }
                        </div>
                        }

                    </div>
                </div>
            </div>
        </div>

        <div class="mt-3 d-flex justify-content-center gap-3">
            <div>
                ID: @Item.ItemID
            </div>
            <div>
                Created: @Item.CreatedDate.ToString("MMM dd, yyyy")
            </div>
            <div>
                Modified: @Item.ModifiedDate.ToString("MMM dd, yyyy")
            </div>
        </div>
    }
</div>


<ConfirmationDialog @ref="ConfirmDialog"
                    Title="Delete Item"
                    Message="Are you sure you want to delete this item? This action cannot be undone."
                    ConfirmText="Delete"
                    CancelText="Cancel" />

@code {
    [Parameter]
    public int ItemId { get; set; }

    private Item? Item;
    private List<Order> RelatedOrders = new();
    private bool IsLoading = true;
    private bool IsLoadingOrders = true;
    private string ErrorMessage = string.Empty;
    private string StatusMessage = string.Empty;
    private ConfirmationDialog? ConfirmDialog;
    private int SelectedImageId = 0;

    // Inventory adjustment properties
    private int AdjustmentAmount = 0;
    private string AdjustmentReason = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        await LoadItem();
        await LoadRelatedOrders();
    }

    private async Task LoadItem()
    {
        try
        {
            IsLoading = true;
            Item = await ItemService.GetItemByIdAsync(ItemId);
            if (Item?.Images?.Count > 0)
            {
                SelectedImageId = Item.Images.First().ImageID;
            }
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error loading item: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task LoadRelatedOrders()
    {
        try
        {
            IsLoadingOrders = true;
            var allOrders = await OrderService.GetAllOrdersAsync();
            RelatedOrders = allOrders
                .Where(o => o.ItemID == ItemId)
                .OrderByDescending(o => o.SellDate)
                .ToList();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error loading orders: {ex.Message}";
        }
        finally
        {
            IsLoadingOrders = false;
        }
    }

    private void SelectImage(int imageId)
    {
        SelectedImageId = imageId;
    }

    private async Task ApplyInventoryAdjustment()
    {
        if (Item == null)
            return;

        try
        {
            Item.CurrentInventoryQty += AdjustmentAmount;
            Item.CurrentInventoryQty = Math.Max(0, Item.CurrentInventoryQty);
            await ItemService.UpdateItemAsync(Item);

            AdjustmentAmount = 0;
            AdjustmentReason = string.Empty;
            StatusMessage = "Inventory adjusted successfully.";
            StateHasChanged();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error updating inventory: {ex.Message}";
        }
    }

    private void NavigateToOrderDetail(int orderId)
    {
        Navigation.NavigateTo($"/sales/detail/{orderId}");
    }

    private async Task HandleDelete()
    {
        if (ConfirmDialog == null || !await ConfirmDialog.ShowAsync())
            return;

        try
        {
            await ItemService.DeleteItemAsync(ItemId);
            Navigation.NavigateTo("/items/view");
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error deleting item: {ex.Message}";
        }
    }
}
