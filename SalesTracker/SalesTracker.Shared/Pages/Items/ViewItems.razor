@page "/items/view"
@using SalesTracker.Shared.Components
@inject ItemService ItemService
@inject NavigationManager Navigation

<PageTitle>Items</PageTitle>

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Items</h1>
        <a href="/items/setup" class="btn btn-primary">New Item</a>
    </div>
    
    @if (IsLoading)
    {
        <p>Loading items...</p>
    }
    else if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @ErrorMessage
        </div>
    }
    else if (Items.Count == 0)
    {
        <p>No items found. <a href="/items/setup">Create one now.</a></p>
    }
    else
    {
        <div class="mb-3">
            <InputText class="form-control" placeholder="Search items..." @bind-Value="SearchTerm" @onchange="HandleSearch" />
        </div>
        
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Item ID</th>
                    <th>Name</th>
                    <th>Cost</th>
                    <th>Sale Price</th>
                    <th>Current Qty</th>
                    <th>Allocated Qty</th>
                    <th>Available Qty</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Items)
                {
                    <tr>
                        <td>@item.ItemID</td>
                        <td>
                            <strong>@item.Name</strong>
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                <br />
                                <small class="text-muted">@item.Description</small>
                            }
                        </td>
                        <td>${item.Cost:F2}</td>
                        <td>@(item.SalePrice.HasValue ? $"${item.SalePrice:F2}" : "N/A")</td>
                        <td>@item.CurrentInventoryQty</td>
                        <td>@item.AllocatedInventoryQty</td>
                        <td>
                            <span class="@GetStockBadgeClass(item.AvailableInventoryQty)">
                                @item.AvailableInventoryQty
                            </span>
                        </td>
                        <td>
                            <a href="/items/setup/@item.ItemID" class="btn btn-sm btn-info">Edit</a>
                            <button class="btn btn-sm btn-danger" @onclick="() => HandleDelete(item.ItemID)">Delete</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

<ConfirmationDialog @ref="ConfirmDialog" Title="Delete Item" Message="Are you sure you want to delete this item? This action cannot be undone." ConfirmText="Delete" CancelText="Cancel" />

@code {
    private List<Item> Items = new();
    private List<Item> AllItems = new();
    private bool IsLoading = true;
    private string ErrorMessage = string.Empty;
    private string SearchTerm = string.Empty;
    private ConfirmationDialog? ConfirmDialog;

    protected override async Task OnInitializedAsync()
    {
        await LoadItems();
    }

    private async Task LoadItems()
    {
        try
        {
            IsLoading = true;
            ErrorMessage = string.Empty;
            AllItems = await ItemService.GetAllItemsAsync();
            Items = AllItems;
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error loading items: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task HandleSearch()
    {
        if (string.IsNullOrWhiteSpace(SearchTerm))
        {
            Items = AllItems;
        }
        else
        {
            Items = await ItemService.SearchItemsAsync(SearchTerm);
        }
    }

    private async Task HandleDelete(int itemId)
    {
        if (ConfirmDialog == null || !await ConfirmDialog.ShowAsync())
            return;

        try
        {
            await ItemService.DeleteItemAsync(itemId);
            await LoadItems();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error deleting item: {ex.Message}";
        }
    }

    private string GetStockBadgeClass(int availableQty)
    {
        if (availableQty <= 0)
            return "badge bg-danger";
        if (availableQty < 10)
            return "badge bg-warning";
        return "badge bg-success";
    }
}

