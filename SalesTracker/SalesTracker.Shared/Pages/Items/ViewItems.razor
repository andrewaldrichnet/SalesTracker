@page "/items/view"
@using SalesTracker.Shared.Components
@inject ItemService ItemService
@inject NavigationManager Navigation

<PageTitle>Items</PageTitle>

<div class="view-items-container">
    <div class="items-header">
        <h2>Items</h2>
        <a href="/items/setup" class="btn btn-primary btn-lg">New Item</a>
    </div>

    @if (IsLoading)
    {
        <p>Loading items...</p>
    }
    else if (!string.IsNullOrEmpty(ErrorMessage))
    {
        <div class="alert alert-danger" role="alert">
            @ErrorMessage
        </div>
    }
    else if (Items.Count == 0)
    {
        <p>No items found. <a href="/items/setup">Create one now.</a></p>
    }
    else
    {
        <div class="search-section">
            <div class="search-box">
                <InputText class="search-input" placeholder="Search items..." @bind-Value="SearchTerm" @onchange="HandleSearch" />
                <button class="btn btn-primary search-btn" @onclick="HandleSearch" title="Search">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.397h-.001c.003-.003.006-.006.009-.009l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.009-.009zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z"/>
                    </svg>
                </button>
            </div>
        </div>

        <div class="filter-tabs">
            <button class="filter-pill @(CurrentFilter == FilterType.All ? "active" : "")" 
                    @onclick="() => SetFilter(FilterType.All)">
                All Items
            </button>
            <button class="filter-pill @(CurrentFilter == FilterType.Backordered ? "active" : "")" 
                    @onclick="() => SetFilter(FilterType.Backordered)">
                Back-ordered
            </button>
            <button class="filter-pill @(CurrentFilter == FilterType.InStock ? "active" : "")" 
                    @onclick="() => SetFilter(FilterType.InStock)">
                Current Inventory
            </button>
        </div>

        <div class="items-list">
            @foreach (var item in FilteredItems)
            {
                <ItemRow Item="item" OnClick="HandleItemClick" />
            }
        </div>
    }
</div>

<ConfirmationDialog @ref="ConfirmDialog" Title="Delete Item" Message="Are you sure you want to delete this item? This action cannot be undone." ConfirmText="Delete" CancelText="Cancel" />

<ConfirmationDialog @ref="ConfirmDialog" Title="Delete Item" Message="Are you sure you want to delete this item? This action cannot be undone." ConfirmText="Delete" CancelText="Cancel" />

@code {
    private enum FilterType
    {
        All,
        Backordered,
        InStock
    }

    private List<Item> Items = new();
    private List<Item> AllItems = new();
    private bool IsLoading = true;
    private string ErrorMessage = string.Empty;
    private string SearchTerm = string.Empty;
    private ConfirmationDialog? ConfirmDialog;
    private FilterType CurrentFilter = FilterType.All;

    private List<Item> FilteredItems
    {
        get
        {
            var items = Items;

            return CurrentFilter switch
            {
                FilterType.Backordered => items.Where(i => i.AllocatedInventoryQty > i.CurrentInventoryQty).ToList(),
                FilterType.InStock => items.Where(i => i.AvailableInventoryQty > 0).ToList(),
                _ => items
            };
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadItems();
    }

    private async Task LoadItems()
    {
        try
        {
            IsLoading = true;
            ErrorMessage = string.Empty;
            AllItems = await ItemService.GetAllItemsAsync();
            Items = AllItems;
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error loading items: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }

    private async Task HandleSearch()
    {
        if (string.IsNullOrWhiteSpace(SearchTerm))
        {
            Items = AllItems;
        }
        else
        {
            Items = await ItemService.SearchItemsAsync(SearchTerm);
        }
    }

    private void SetFilter(FilterType filter)
    {
        CurrentFilter = filter;
    }

    private void HandleItemClick(Item item)
    {
        Navigation.NavigateTo($"/items/setup/{item.ItemID}");
    }

    private async Task HandleDelete(int itemId)
    {
        if (ConfirmDialog == null || !await ConfirmDialog.ShowAsync())
            return;

        try
        {
            await ItemService.DeleteItemAsync(itemId);
            await LoadItems();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error deleting item: {ex.Message}";
        }
    }
}

